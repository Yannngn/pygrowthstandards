{
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.pytestEnabled": true,
  "python.analysis.exclude": [
      "**/.venv/*",
      "build",
      "dist",
      "**/__pycache__",
      "**/*.egg-info"
  ],

  // Ruff settings for VSCode
  "ruff.exclude": [
      "**/.venv/*",
      "build",
      "dist",
      "**/__pycache__",
      "**/*.egg-info"
  ],
  "files.exclude": {
      "**/__pycache__": true,
      "**/*.egg-info": true
  }
}